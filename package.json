{
  "name": "gulp-ignite",
  "description": "A gulp igniter loaded with some of the most common tasks ready to go.",
  "version": "0.0.0-semantically-released",
  "main": "index.js",
  "scripts": {
    "build": "babel src -d ./",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "lint": "eslint ./src/**/*.js",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jscarmona/gulp-ignite.git"
  },
  "keywords": [
    "gulp",
    "starter",
    "tasks"
  ],
  "author": "Javier Carmona",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jscarmona/gulp-ignite/issues"
  },
  "homepage": "https://github.com/jscarmona/gulp-ignite#readme",
  "dependencies": {
    "gulp": "3.9.1",
    "gulp-help": "1.6.1",
    "gulp-util": "3.0.7",
    "lodash": "4.6.1",
    "node-notifier": "4.5.0",
    "pretty-hrtime": "1.0.2"
  },
  "devDependencies": {
    "babel-cli": "6.6.4",
    "babel-preset-es2015": "6.6.0",
    "commitizen": "2.6.1",
    "cz-conventional-changelog": "1.1.5",
    "semantic-release": "4.3.5",
    "eslint": "2.10.1",
    "eslint-config-airbnb-base": "3.0.1",
    "eslint-plugin-import": "1.8.0",
    "ghooks": "1.0.3"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-push": "npm lint",
      "post-merge": "npm install",
      "post-rewrite": "npm install"
    }
  }
}
